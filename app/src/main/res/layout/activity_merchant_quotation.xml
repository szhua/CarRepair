<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.lei.repair.ui.activity.MerchantQuotation">


    <include
        layout="@layout/header_layout"
        ></include>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common46dp"
                android:background="@color/background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_left_right_margin"
                    android:text="维修订单"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/common_left_right_margin"
                    android:text="909094834923842"
                    android:textColor="@color/text_color_theme"
                    android:textSize="@dimen/text_size_14sp" />

            </LinearLayout>

            <View style="@style/Divider"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common46dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_left_right_margin"
                    android:text="维修配件/材料费"
                    android:textColor="@color/text_color_theme"
                    android:textSize="@dimen/text_size_16sp" />

                <View style="@style/Divider"></View>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_top_bottom_margin">

                    <TextView
                        android:layout_width="@dimen/common0dp"
                        android:layout_height="@dimen/common30dp"
                        android:layout_marginLeft="@dimen/common_left_right_margin"
                        android:layout_marginTop="@dimen/common6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="名称" />


                    <TextView
                        android:layout_width="@dimen/common0dp"
                        android:layout_height="@dimen/common30dp"
                        android:layout_marginLeft="@dimen/common_left_right_margin"
                        android:layout_marginTop="@dimen/common6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="单价" />


                    <TextView
                        android:layout_width="@dimen/common0dp"
                        android:layout_height="@dimen/common30dp"
                        android:layout_marginLeft="@dimen/common_left_right_margin"
                        android:layout_marginTop="@dimen/common6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="数量" />


                    <TextView
                        android:layout_width="@dimen/common0dp"
                        android:layout_height="@dimen/common30dp"
                        android:layout_marginLeft="@dimen/common_left_right_margin"
                        android:layout_marginTop="@dimen/common6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="总价" />


                    <TextView
                        android:layout_width="@dimen/common0dp"
                        android:layout_height="@dimen/common30dp"
                        android:layout_marginLeft="@dimen/common_left_right_margin"
                        android:layout_marginRight="@dimen/common_left_right_margin"
                        android:layout_marginTop="@dimen/common6dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="产地" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/matrial_fee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

                <View style="@style/Divider"></View>

                <TextView
                    android:id="@+id/add_matrial"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common46dp"
                    android:background="@drawable/white_press_bg"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_16sp" />

                <View style="@style/Divider"></View>

                <com.lei.repair.widget.NormalInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:input_type="text"
                    app:left_text="维修工时费"
                    app:right_hint="请填写工时费"></com.lei.repair.widget.NormalInputEditText>

                <com.lei.repair.widget.NormalInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:input_type="text"
                    app:left_text="维修总价"
                    app:right_hint="请填写维修总价"></com.lei.repair.widget.NormalInputEditText>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common46dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_left_right_margin"
                    android:text="保养配件/材料费"
                    android:textColor="@color/text_color_theme"
                    android:textSize="@dimen/text_size_16sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/bao_yang_matrials"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


                <View style="@style/Divider"></View>

                <TextView
                    android:id="@+id/add_baoyang_bt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common46dp"
                    android:background="@drawable/white_press_bg"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/text_size_16sp" />

                <View style="@style/Divider"></View>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/common46dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_left_right_margin"
                android:text="上传保养配件/机油照片"
                android:textColor="@color/text_color_theme"
                android:textSize="@dimen/text_size_16sp" />

            <View style="@style/Divider"></View>


            <com.lei.repair.widget.SelectPhotoView
                android:id="@+id/select_photos_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/common_top_bottom_margin"
                android:paddingTop="@dimen/common_top_bottom_margin"></com.lei.repair.widget.SelectPhotoView>


            <com.lei.repair.widget.NormalInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:input_type="text"
                app:left_text="保养工时费"
                app:right_hint="请填写工时费"></com.lei.repair.widget.NormalInputEditText>

            <com.lei.repair.widget.NormalInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:input_type="text"
                app:left_text="保养总价"
                app:right_hint="请填写保养总价"></com.lei.repair.widget.NormalInputEditText>

            <com.lei.repair.widget.NormalInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:input_type="text"
                app:left_text="总报价"
                app:right_hint="请填写总报价价"></com.lei.repair.widget.NormalInputEditText>

            <com.lei.repair.widget.NormalInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:input_type="text"
                app:left_text="工时（小时）"
                app:right_hint="请填写工时"></com.lei.repair.widget.NormalInputEditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common46dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_left_right_margin"
                    android:text="违约赔偿:按照维修金额的"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_12sp" />

                <EditText
                    android:layout_width="@dimen/common60dp"
                    android:layout_height="@dimen/common30dp"
                    android:layout_margin="@dimen/common6dp"
                    android:background="@drawable/tag_bg_shape_un" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_left_right_margin"
                    android:paddingLeft="@dimen/common_left_right_margin"
                    android:paddingRight="@dimen/common_left_right_margin"
                    android:text="赔偿(最低20%)"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>

            <View style="@style/Divider"></View>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common46dp"
                android:background="@color/white">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/common_left_right_margin"
                    android:gravity="center_vertical"
                    android:text="质保时间"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/qulty_time_select_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView"
                    android:layout_alignBottom="@+id/textView"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/tag_bg_shape_un"
                    android:drawableRight="@drawable/rigjt_arrow"
                    android:paddingBottom="@dimen/common_top_bottom_margin"
                    android:paddingLeft="@dimen/common_left_right_margin"
                    android:paddingRight="@dimen/common_left_right_margin"
                    android:paddingTop="@dimen/common_top_bottom_margin"
                    android:text="1个月"
                    android:textColor="@color/text_color_normal" />

            </RelativeLayout>


            <View style="@style/Divider"></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/common_top_bottom_margin"
                android:paddingLeft="@dimen/common_left_right_margin"
                android:paddingTop="@dimen/common_top_bottom_margin"
                android:text="交通补助类增值"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_16sp" />

            <com.lei.repair.widget.TagsView
                android:id="@+id/travel_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.lei.repair.widget.TagsView>


            <View style="@style/Divider"></View>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/common_top_bottom_margin"
                    android:paddingLeft="@dimen/common_left_right_margin"
                    android:paddingTop="@dimen/common_top_bottom_margin"
                    android:text="服务类增值"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="可多选"
                    android:layout_marginRight="@dimen/common_left_right_margin"
                    android:textColor="@color/text_color_theme"
                    android:textSize="@dimen/text_size_14sp" />
            </RelativeLayout>

            <com.lei.repair.widget.MultiSelectTagsView
                android:id="@+id/services_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.lei.repair.widget.MultiSelectTagsView>

            <View style="@style/Divider"></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/common_top_bottom_margin"
                android:paddingLeft="@dimen/common_left_right_margin"
                android:paddingTop="@dimen/common_top_bottom_margin"
                android:text="商品类增值"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_16sp" />

            <com.lei.repair.widget.TagsView
                android:id="@+id/goods_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.lei.repair.widget.TagsView>

            <View style="@style/Divider"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/common_top_bottom_margin"
                    android:layout_marginLeft="@dimen/common_left_right_margin"
                    android:layout_marginTop="@dimen/common_top_bottom_margin"
                    android:text="其他增值"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_14sp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common80dp"
                    android:layout_marginBottom="@dimen/common_top_bottom_margin"
                    android:layout_marginLeft="@dimen/common6dp"
                    android:layout_marginRight="@dimen/common_left_right_margin"
                    android:layout_marginTop="@dimen/common_top_bottom_margin"
                    android:background="@drawable/edit_shape"
                    android:gravity="left|top"
                    android:hint="请输入内容"
                    android:textSize="@dimen/text_size_14sp"
                    android:padding="@dimen/common4dp"
                    android:textColor="@color/text_color_normal"
                    android:textColorHint="@color/text_color_light" />

            </LinearLayout>

            <TextView
                android:id="@+id/submit"
                style="@style/normal_bt_style"
                android:layout_marginBottom="@dimen/common_left_right_margin"
                android:layout_marginTop="@dimen/common_left_right_margin"
                android:text="提交"></TextView>

        </LinearLayout>


    </ScrollView>


</LinearLayout>
