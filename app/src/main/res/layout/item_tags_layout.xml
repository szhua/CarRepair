<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/common4dp"
    android:paddingBottom="@dimen/common4dp"
    android:paddingLeft="@dimen/common6dp"
    android:background="@drawable/tag_bg_shape"
    android:paddingRight="@dimen/common6dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tagname"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14sp"
        android:layout_width="wrap_content"
        android:text="今天是个好天气"
        android:layout_height="wrap_content">
    </TextView>

    <ImageView
        android:id="@+id/delete"
        android:paddingLeft="@dimen/common4dp"
        android:paddingRight="@dimen/common4dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />

</LinearLayout>