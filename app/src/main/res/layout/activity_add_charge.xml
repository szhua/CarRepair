<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.lei.repair.ui.activity.AddChargeActivity">

    <include
        layout="@layout/header_layout"
        ></include>


    <TextView
        android:id="@+id/type"
        android:textColor="@color/text_color_theme"
        android:paddingLeft="@dimen/common_left_right_margin"
        android:gravity="center_vertical"
        android:text="维修配件/材料费"
        android:textSize="@dimen/text_size_16sp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common40dp" />

    <View style="@style/Divider"></View>

    <com.lei.repair.widget.NormalInputEditText
        android:layout_width="match_parent"
        app:input_type="text"
        app:left_text="名称"
        app:right_hint="请填写名称"
        android:layout_height="wrap_content"></com.lei.repair.widget.NormalInputEditText>
    <com.lei.repair.widget.NormalInputEditText
        android:layout_width="match_parent"
        app:input_type="text"
        app:left_text="单价"
        app:right_hint="请填写单价"
        android:layout_height="wrap_content"></com.lei.repair.widget.NormalInputEditText>
    <com.lei.repair.widget.NormalInputEditText
        android:layout_width="match_parent"
        app:input_type="text"
        app:left_text="数量"
        app:right_hint="请填写数量"
        android:layout_height="wrap_content"></com.lei.repair.widget.NormalInputEditText>

    <com.lei.repair.widget.NormalInputEditText
        android:layout_width="match_parent"
        app:input_type="text"
        app:left_text="总价"
        app:right_hint="请填写名称"
        android:layout_height="wrap_content"></com.lei.repair.widget.NormalInputEditText>



    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="46dp">


        <TextView
            android:layout_marginLeft="@dimen/common_left_right_margin"
            android:text="产地"
            android:gravity="center"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/text_color_normal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/types_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/common6dp"
            android:layout_marginBottom="@dimen/common6dp"
            android:text="原厂"
            android:paddingLeft="@dimen/common20dp"
            android:paddingRight="@dimen/common20dp"
            android:drawablePadding="@dimen/common6dp"
            android:drawableRight="@drawable/rigjt_arrow"
            android:gravity="center"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/text_color_gray"
            android:background="@drawable/tag_bg_shape_un"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/submit_bt"
        android:layout_marginTop="@dimen/common30dp"
        android:text="确认"
        style="@style/normal_bt_style"
        ></TextView>


</LinearLayout>
